<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-10">
      <div class="card-volunteer">
        <div class="row justify-content-center">
          <div class="col-sm-12 col-md-8">
            <div class="form-volunteer-box py-5">
              <%= simple_form_for([@order, @item], remote: true) do |f| %>
                <%= f.association :donation, label: "Escolha o item que deseja doar" %>
                <%= f.input :amount, label: "Escolha a quantidade desse item que você pode doar"  %>
                <%= f.button :submit, "Doar esse item", class: "button-donation-submit"  %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-10">
      <div class="mt-5 d-flex row item-div">
        <% @order.items.each do |item| %>
          <div class="item col-xm-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
            
            <div class="item-content">
              <h3><%= item.donation.name %></h3>
              <p>Quantidade: <%= item.amount %></p>
            </div>
            <%= link_to '<i class="fas fa-times delete-icon"></i>'.html_safe, order_item_path(item), method: :delete %>
          </div>
        <% end %>
      </div>
        <button id="sweet-alert-demo" class="button-donation-submit my-2">Completar doação!</button>
        <%= link_to "", order_mailer_path(@order), id: "submit-link", class: "hidden" %>
      </div>
    </div>
  </div>
</div>
